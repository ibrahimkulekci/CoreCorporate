
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
@section styles{
    <link href="~/admintheme/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tüm Sayfalar</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>PageTitle</th>
                                    <th>Url</th>
                                    <th>Durumu</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Güncellenme Tarihi</th>
                                </tr>
                            </thead>
                            
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admintheme/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/admintheme/js/plugins/dataTables/dataTables.bootstrap4.min.js"></script>
    
    <script>
        var baseUrl = "@Url.Content("~/")";
        $(function () {
            LoadTable();
            $(document).keypress(function (e) {
                if (e.which == 13) {
                    LoadTable();
                }
            });
        })

        function LoadTable() {
            $('.dataTables-example').dataTable().fnDestroy();            
            $('.dataTables-example').dataTable({
                "pageLength":10,
                "serverSide": true,
                "processing": true,
                "destroy": true,
                "filter": true,
                "ordering": true,
                "deferRender": true,
                "drawCallback": function () {
                    $("#dataTable_wrapper").children().eq(1).css("overflow", "auto");
                },
                "ajax": {
                    "type": "POST",
                    "url": baseUrl + "AdminPanel/Page/GetList",
                    "contentType": "application/json; charset=utf-8",
                    //"headers": { 'RequestVerificationToken': $('#__RequestVerificationToken').val() },
                    "data": function (data) {
                        return JSON.stringify(data);
                    }
                },
                "columnDefs": [
                    {
                        "searchable": true,
                        "orderable": true,
                        "targets": [0,1,2,3,4]
                    }, {
                        "targets": [1, 2, 3, 4],
                        "render": $.fn.dataTable.render.text()
                    }, {
                        "targets": 1,
                        "visible": true
                    }
                ],
                "columns": [
                    { "data": "pageTitle" },
                    { "data": "pageUrl" },
                    {
                        "data": "pageStatus",
                        "searchable": true,
                        "orderable": true,
                        "render": function (data, type, row) {
                            if ({ data: "pageStatus" == false }) {
                                return "<span class='badge badge-success'>Yayında</span>";
                            }
                            else
                            {
                                return "<span class='badge badge-danger'>Yayında Değil</span>";
                            }
                        }
                    },
                    { "data": "pageCreatedDate" },
                    { "data": "pageUpdatedDate" },
                ],
             "order":[1,"desc"]
            })
        }
    </script>
}