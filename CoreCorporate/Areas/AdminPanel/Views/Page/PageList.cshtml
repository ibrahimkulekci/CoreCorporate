@using EntityLayer.Concrete
@model List<Page>
@{
    ViewData["Title"] = "PageList";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tüm Sayfalar</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <a href="~/AdminPanel/Page/PageAdd" class="btn btn-primary btn-sm">Yeni Sayfa Ekle</a>
                </div>
                <div class="ibox-content">


                    @if (Model.Count <= 0)
                    {
                        <h2 class="text-center">Henüz sayfa eklenmemiştir!</h2>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Sayfa Adı</th>
                                    <th>Sayfa Url</th>
                                    <th>Sayfa Durumu</th>
                                    <th>Sayfa Oluşturma Tarihi</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PageID</td>
                                        <td>@item.PageTitle</td>
                                        <td>@item.PageUrl</td>
                                        <td>@Html.Raw(item.PageStatus == true ? "<span class='badge badge-success'>Yayında</span>" : "<span class='badge badge-danger'>Yayında Değil</span>")</td>
                                        <td>@(((DateTime)item.PageCreatedDate).ToString("dd.MM.yyyy"))</td>
                                        <td> <a href="~/AdminPanel/Page/PageUpdate/@item.PageID" class="btn btn-w-m btn-primary">Düzenle</a> </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

