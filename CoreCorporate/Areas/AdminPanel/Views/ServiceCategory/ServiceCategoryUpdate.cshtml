@model EntityLayer.Concrete.ServiceCategory
@{
    ViewData["Title"] = "ServiceCategoryUpdate";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
@section styles{
    <link href="~/admintheme/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">
    <link href="~/admintheme/css/plugins/iCheck/custom.css" rel="stylesheet">
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Hizmet Kategorisi Düzenle</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <form role="form" method="post">
                                @Html.HiddenFor(x => x.ServiceCategoryID)
                                @Html.HiddenFor(x => x.ServiceCategoryCreatedDate)
                                <div class="form-group">
                                    @Html.Label("Hizmet Kategori Adı")
                                    @Html.TextBoxFor(x => x.ServiceCategoryTitle, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ServiceCategoryTitle, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Hizmet Kategori Açıklaması")
                                    <div class="summernote" name="ServiceContent"></div>
                                    @Html.TextAreaFor(x => x.ServiceCategoryContent, new { @class = "form-control", @row = 5 })
                                    @Html.ValidationMessageFor(x => x.ServiceCategoryContent, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Yayınlansın mı?")
                                    <div class="checkbox i-checks">
                                        @Html.CheckBoxFor(m => m.ServiceCategoryStatus)
                                    </div>
                                    @Html.ValidationMessageFor(m => m.ServiceCategoryStatus, null, new { @class = "text-danger" })
                                </div>
                                <div>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Düzenle</strong></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/admintheme/js/plugins/summernote/summernote-bs4.js"></script>
    <script src="~/admintheme/js/plugins/iCheck/icheck.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#ServiceCategoryContent').summernote({
                height: 300,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: true
            });

            $('.custom-file-input').on('change', function () {
                let fileName = $(this).val().split('\\').pop();
                $(this).next('.custom-file-label').addClass("selected").html(fileName);
            });

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

        });
    </script>

}