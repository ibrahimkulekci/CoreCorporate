@using EntityLayer.Concrete
@model List<Team> 
@{
    ViewData["Title"] = "TeamList";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tüm Ekip Listesi</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <a href="~/AdminPanel/Team/TeamAdd" class="btn btn-primary btn-sm">Yeni Ekip Üyesi Ekle</a>
                </div>
                <div class="ibox-content">

                    @if (Model.Count <= 0)
                    {
                        <h2 class="text-center">Henüz ekip üyesi eklenmemiştir!</h2>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ekip Üyesi Adı Soyadı</th>
                                    <th>Ekip Üyesi Ünvanı</th>
                                    <th>Ekip Üyesi Url</th>
                                    <th>Ekip Üyesi Durumu</th>
                                    <th>Ekip Üyesi Son Düzenleme</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.TeamID</td>
                                    <td>@item.TeamName</td>
                                    <td>@item.TeamPosition</td>
                                    <td>@item.TeamUrl</td>
                                    <td>@Html.Raw(item.TeamStatus == true ? "<span class='badge badge-success'>Yayında</span>" : "<span class='badge badge-danger'>Yayında Değil</span>")</td>
                                    <td>@(((DateTime)item.TeamUpdatedDate).ToString("dd.MM.yyyy"))</td>
                                    <td> <a href="~/AdminPanel/Team/TeamUpdate/@item.TeamID" class="btn btn-w-m btn-primary">Düzenle</a> </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>