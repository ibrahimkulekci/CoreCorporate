
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Yönetim Paneli</title>

    <link href="~/admintheme/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admintheme/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/admintheme/css/animate.css" rel="stylesheet">
    <link href="~/admintheme/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name" style="font-size:85px;">Yönetim Paneli</h1>

            </div>
            <form class="m-t" role="form" method="post">
                <div class="form-group">
                    <input type="text" name="Username" class="form-control" placeholder="Kullanıcı Adı" required="">
                </div>
                <div class="form-group">
                    <input type="password" name="Password" class="form-control" placeholder="Şifre" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Giriş Yap</button>
            </form>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/admintheme/js/jquery-3.1.1.min.js"></script>
    <script src="~/admintheme/js/popper.min.js"></script>
    <script src="~/admintheme/js/bootstrap.js"></script>

</body>

</html>
