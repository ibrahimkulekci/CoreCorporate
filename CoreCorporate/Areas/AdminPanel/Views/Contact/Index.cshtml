@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>İletişim Mesajları</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">


                    @if (Model.Count <= 0)
                    {
                        <h2 class="text-center">Henüz iletişim mesajı bulunmamaktadır!</h2>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Ad Soyad</th>
                                    <th>E-Posta</th>
                                    <th>Konu</th>
                                    <th>Gönderilme Tarihi</th>
                                    <th>Okundu mu?</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Email</td>
                                        <td>@item.Subject</td>
                                        <td>@Html.Raw(item.MarkRead != 0 ? "<span class='badge badge-success'>Okundu</span>" : "<span class='badge badge-danger'>Okunmadı</span>")</td>
                                        <td>@(((DateTime)item.GalleryCreatedDate).ToString("dd.MM.yyyy"))</td>
                                        <td> <a href="~/AdminPanel/Contact/Details/@item.Id" class="btn btn-w-m btn-primary">Görüntüle</a> </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>