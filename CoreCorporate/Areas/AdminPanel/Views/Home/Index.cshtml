                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.ServiceCount</h1>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Toplam Haber Sayısı</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.NewsCount</h1>
