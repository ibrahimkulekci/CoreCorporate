@using EntityLayer.Concrete
@model List<Reference>
@{
    ViewData["Title"] = "ReferenceList";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tüm Referanslar</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <a href="~/AdminPanel/Reference/ReferenceAdd" class="btn btn-primary btn-sm">Yeni Referans Ekle</a>
                </div>
                <div class="ibox-content">
                    @if (Model.Count <= 0)
                    {
                        <h2 class="text-center">Henüz referans eklenmemiştir!</h2>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Referans Adı</th>
                                    <th>Referans Url</th>
                                    <th>Referans Durumu</th>
                                    <th>Referans Son Düzenleme</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ReferenceID</td>
                                        <td>@item.ReferenceTitle</td>
                                        <td>@item.ReferenceUrl</td>
                                        <td>@Html.Raw(item.ReferenceStatus == true ? "<span class='badge badge-success'>Yayında</span>" : "<span class='badge badge-danger'>Yayında Değil</span>")</td>
                                        <td>@(((DateTime)item.ReferenceUpdatedDate).ToString("dd.MM.yyyy"))</td>
                                        <td> <a href="~/AdminPanel/Reference/ReferenceUpdate/@item.ReferenceID" class="btn btn-w-m btn-primary">Düzenle</a> </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>