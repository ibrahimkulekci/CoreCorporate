@model EntityLayer.Concrete.Setting
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Yeni Ayar Ekle</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            @using (Html.BeginForm("Add", "Setting", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.Label("Key Adı")
                                    @Html.TextBoxFor(x => x.Key, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Key, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Value Değeri")
                                    @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Value, null, new { @class = "text-danger" })
                                </div>
                                <div>
                                    <button class="btn btn-primary float-right" type="submit"><strong>Yayınla</strong></button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>