@using EntityLayer.Concrete
@model List<News>
@{
    ViewData["Title"] = "NewsList";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tüm Haberler</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <a href="~/AdminPanel/News/NewsAdd" class="btn btn-primary btn-sm">Yeni Haber Ekle</a>
                </div>
                <div class="ibox-content">
                    @if (Model.Count <= 0)
                    {
                        <h2 class="text-center">Henüz hizmet eklenmemiştir!</h2>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Haber Başlık</th>
                                    <th>Haber Url</th>
                                    <th>Haber Durumu</th>
                                    <th>Haber Son Düzenleme</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NewsID</td>
                                        <td>@item.NewsTitle</td>
                                        <td>@item.NewsUrl</td>
                                        <td>@Html.Raw(item.NewsStatus == true ? "<span class='badge badge-success'>Yayında</span>" : "<span class='badge badge-danger'>Yayında Değil</span>")</td>
                                        <td>@(((DateTime)item.NewsUpdatedDate).ToString("dd.MM.yyyy"))</td>
                                        <td> <a href="~/AdminPanel/News/NewsUpdate/@item.NewsID" class="btn btn-w-m btn-primary">Düzenle</a> </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>