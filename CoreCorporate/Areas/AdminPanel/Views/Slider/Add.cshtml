@model EntityLayer.Concrete.Slider
@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
@section styles{
    <link href="~/admintheme/css/plugins/iCheck/custom.css" rel="stylesheet">
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Yeni Slider Ekle</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            @using (Html.BeginForm("Add", "Slider", FormMethod.Post))
                            {
                                <div class="form-group">
                                    @Html.Label("Slider Başlık")
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Slider Kısa Açıklama")
                                    @Html.TextBoxFor(x => x.ShortDescription, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ShortDescription, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Slider Resim")
                                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ImageUrl, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Buton Yazısı")
                                    @Html.TextBoxFor(x => x.ButtonText, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ButtonText, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Buton Adresi")
                                    @Html.TextBoxFor(x => x.ButtonUrl, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ButtonUrl, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Slider Sırası")
                                    @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.DisplayOrder, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Yayınlansın mı?")
                                    <div class="checkbox i-checks">
                                        @Html.CheckBoxFor(m => m.IsActive)
                                    </div>
                                    @Html.ValidationMessageFor(m => m.IsActive, null, new { @class = "help-block" })
                                </div>
                                <div>
                                    <button class="btn btn-primary float-right" type="submit"><strong>Yayınla</strong></button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <!-- iCheck -->
    <script src="~/admintheme/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
}