@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tüm Ürünler</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <a href="~/AdminPanel/Product/ProductAdd" class="btn btn-primary btn-sm">Yeni Ürün Ekle</a>
                </div>
                <div class="ibox-content">
                    @if (Model.Count <= 0)
                    {
                        <h2 class="text-center">Henüz ürün eklenmemiştir!</h2>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ürün Adı</th>
                                    <th>Ürün Url</th>
                                    <th>Ürün Durumu</th>
                                    <th>Ürün Son Düzenleme</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductID</td>
                                        <td>@item.ProductTitle</td>
                                        <td>@item.ProductUrl</td>
                                        <td>@Html.Raw(item.ProductStatus == true ? "<span class='badge badge-success'>Yayında</span>" : "<span class='badge badge-danger'>Yayında Değil</span>")</td>
                                        <td>@(((DateTime)item.ProductUpdatedDate).ToString("dd.MM.yyyy"))</td>
                                        <td> <a href="~/AdminPanel/Product/ProductUpdate/@item.ProductID" class="btn btn-w-m btn-primary">Düzenle</a> </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

