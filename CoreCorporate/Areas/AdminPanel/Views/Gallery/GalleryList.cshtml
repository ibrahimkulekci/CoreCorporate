@using EntityLayer.Concrete
@model List<Gallery>
@{
    ViewData["Title"] = "GalleryList";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Tüm Galeriler</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <a href="~/AdminPanel/Gallery/GalleryAdd" class="btn btn-primary btn-sm">Yeni Galeri Ekle</a>
                </div>
                <div class="ibox-content">
                    @if (Model.Count <= 0)
                    {
                        <h2 class="text-center">Henüz galeri eklenmemiştir!</h2>
                    }
                    else
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Galeri Adı</th>
                                    <th>Galeri Url</th>
                                    <th>Galeri Durumu</th>
                                    <th>Galeri Son Düzenleme</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.GalleryID</td>
                                        <td>@item.GalleryTitle</td>
                                        <td>@item.GalleryUrl</td>
                                        <td>@Html.Raw(item.GalleryStatus == true ? "<span class='badge badge-success'>Yayında</span>" : "<span class='badge badge-danger'>Yayında Değil</span>")</td>
                                        <td>@(((DateTime)item.GalleryUpdatedDate).ToString("dd.MM.yyyy"))</td>
                                        <td>
                                            <a href="~/AdminPanel/Gallery/GalleryImageAdd/@item.GalleryID" class="btn btn-w-m btn-success">Resim Ekle</a>
                                            <a href="~/AdminPanel/Gallery/GalleryUpdate/@item.GalleryID" class="btn btn-w-m btn-primary">Düzenle</a> 
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>