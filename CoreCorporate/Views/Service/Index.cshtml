@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Hizmetlerimiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="innerBanner">
    <div class="inner-content">
        <h2><span>Hizmetlerimiz</span></h2>
        <div>
        </div>
    </div>
</section>

<main id="main">

    <section id="services">
        <div class="container">

            <div class="row">

                @if (Model.Count <= 0)
                {
                    <h2 class="text-center">Henüz hizmetlerimiz eklenmemiştir!</h2>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="box wow fadeInLeft" style="visibility: visible; animation-name: fadeInLeft;">
                                <div class="icon svgImg"><img src="~/img/ServiceImages/@item.ServiceImage" alt="@item.ServiceTitle" style="width:235px;"></div>
                                <h4 class="title"><a href="/Service/Details?url=@item.ServiceUrl">@item.ServiceTitle</a></h4>
                                <p class="description">&nbsp;</p>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
</main>