@using EntityLayer.Concrete
@model List<GalleryImage>
@{
    ViewData["Title"] = ViewBag.GalleryName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <style>
        #portfolio .portfolio-item:hover .portfolio-overlay {
            background-color: none;
        }
    </style>
}


<!--==========================
    Page Banner Section
  ============================-->
<section id="innerBanner">
    <div class="inner-content">
        <h2><span>@ViewBag.GalleryName</span></h2>
        <div>
        </div>
    </div>
</section><!-- #Page Banner -->

<main id="main">


    <!--==========================
      Our Portfolio Section
    ============================-->
    <section id="portfolio" class="wow fadeInUp">
        <div class="container">
            <div class="section-header">
                @Html.Raw(ViewBag.GalleryDesc)
            </div>
        </div>

        <div class="container-fluid">
            <div class="row no-gutters">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4">
                        <div class="portfolio-item wow fadeInUp">
                            <a href="~/img/GalleryImages/@item.ImageUrl" class="portfolio-popup">
                                <img src="~/img/GalleryImages/@item.ImageUrl" alt="@ViewBag.GalleryName">
                                <div class="portfolio-overlay">
                                    @*<div class="portfolio-info"><h2 class="wow fadeInUp">Portfolio Name</h2></div>*@
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section><!-- #portfolio -->


</main>
