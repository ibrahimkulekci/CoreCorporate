@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = ViewBag.CategoryName+" Ürünleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <style>
        .sidebar_categories ul li {
            line-height: 48px;
            border-bottom: 1px solid #f1f1f1;
        }

        .sidebar_categories ul {
            margin-top: 22px;
            margin-bottom: 35px;
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

            .sidebar_categories ul li a {
                font-weight: normal;
                color: #9e9e9e;
                position: relative;
            }

                .sidebar_categories ul li a:hover {
                    color: #00b1e4;
                }

        #services .box {
            padding: 10px;
        }

            #services .box h4 {
                text-align: left;
                font-size: 14px;
                font-weight: 600;
                line-height: 1.4em;
                padding-bottom: 10px;
            }

            #services .box p {
                font-size: 16px;
                font-weight: 400;
                color: #48c7ec;
                line-height: 24px;
                text-align: left;
                padding-bottom: 10px;
            }

        .svgImg img {
            width: 185px;
        }
    </style>
}

<section id="innerBanner">
    <div class="inner-content">
        <h2><span>@ViewBag.CategoryName Ürünleri</span></h2>
        <div>
        </div>
    </div>
</section>

<main id="main">

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @await Component.InvokeAsync("SidebarProductCategoryList")
                </div>
                <div class="col-md-9">
                    <section id="services">
                        <div class="container" style="min-height:500px;">

                            <div class="row">

                                @if (Model.Count == 0)
                                {
                                    <p>Henüz bu kategoriye ürün eklenmemiştir!</p>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {


                                        <div class="col-lg-4">
                                            <div class="box wow fadeInLeft" style="visibility: visible; animation-name: fadeInLeft;">
                                                <div class="icon svgImg">
                                                    <a href="~/Product/Details?url=@item.ProductUrl">
                                                        @if (item.ProductImage != "nullimage.jpg")
                                                        {
                                                            <img src="~/img/ProductImages/@item.ProductImage" alt="@item.ProductTitle">
                                                        }
                                                        else
                                                        {
                                                            <img src="~/@item.ProductImage" alt="@item.ProductTitle">
                                                        }

                                                    </a>
                                                </div>
                                                <h4 class="title">
                                                    <a href="~/Product/Details?url=@item.ProductUrl">@item.ProductTitle</a>
                                                </h4>
                                                <p class="description"></p>
                                            </div>
                                        </div>
                                    }
                                }

                            </div>

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
</main>