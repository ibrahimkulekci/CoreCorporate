@model IEnumerable<EntityLayer.Concrete.Slider>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            if (Model.First() == item)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" data-src="@item.ImageUrl" alt="@item.Title" src="@item.ImageUrl" data-holder-rendered="true" style="min-height:350px;">
                    <div class="carousel-caption" style="background-color: rgba(7,30,51, 0.80); color: #fff; padding: 10px; border-radius: 10px; ">
                        <h5>@item.Title</h5>
                        <p>@item.ShortDescription</p>
                        @if (item.ButtonText != null || item.ButtonUrl != null)
                        {
                            <p><a class="btn btn-info" href="@item.ButtonUrl">@item.ButtonText</a></p>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" data-src="@item.ImageUrl" alt="@item.Title" src="@item.ImageUrl" data-holder-rendered="true" style="min-height:350px;">
                    <div class="carousel-caption" style="background-color: rgba(7,30,51, 0.80); color: #fff; padding: 10px; border-radius: 10px;">
                        <h5>@item.Title</h5>
                        <p>@item.ShortDescription</p>
                        @if (item.ButtonText != null || item.ButtonUrl != null)
                        {
                            <p><a class="btn btn-info" href="@item.ButtonUrl">@item.ButtonText</a></p>
                        }
                    </div>
                </div>
            }


        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>